<div class="container" style='margin-top: 20px;'>
    <input type="hidden" name="acao" value="cadastrar">
    <h1 class="alert alert-primary text-center">{{ mensagem }}<h1>
    <form action="index.php" method="post">
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="Titulo">Titulo</label>
                <input class="form-control" id="Titulo" placeholder="ex: Capitao América" type="text">
            </div>
            <div class="form-group col-md-6">
                <label for="descricacao">Descrição</label>
                <textarea name="descricao" id="descricacao" class="form-control" placeholder="ex: o filme é sobre duas pessoas legais"></textarea>
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="categoria">Categoria</label>
                <select class="form-control" name="categoria" id="categoria">
                    {% include "padroesTwig/optionPadrao.twig" with {"arrayOption": arrayCategoria } %}
                </select>
            </div>
            <div class="form-group col-md-6">
                <label for="ator">Ator</label>
                <input type="text" class="form-control" id="ator" placeholder="ex: Andre Leonardo" name="">
            </div>
        </div>
        <div class="form-row">
            <div class="form-group col-md-6">
                <label for="diretor">Diretor</label>
                <input class="form-control" id="diretor" placeholder="ex: Andre Leonardo" type="text">
            </div>
            <div class="form-group col-md-6">
                <label for="imagemFilme">Imagem</label>
                <input type="file" class="form-control" id="imagemFilme" name="ImagemFilme">
            </div>
        </div>
        <button class="btn btn-primary pull-rigth" type="submit">Cadastrar</button>
    </form>
</div>